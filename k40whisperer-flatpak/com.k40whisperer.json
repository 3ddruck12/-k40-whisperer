{
    "app-id": "com.k40whisperer",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "python3 /app/bin/k40_whisperer.py",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--device=usb",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "k40whisperer",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/bin",
                "install -Dm755 k40_whisperer.py /app/bin/k40_whisperer.py",
                "mkdir -p /app/icons",
                "install -Dm644 scorchworks.ico /app/icons/scorchworks.ico"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/3ddruck12/k40-whisperer.git",
                    "branch": "main"
                }
            ]
        },
        {
            "name": "python-dependencies",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-index --find-links='file://${PWD}' -r requirements.txt --prefix=/app"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "requirements.txt"
                }
            ]
        },
        {
            "name": "udev-rules",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm644 97-ctc-lasercutter.rules /app/etc/udev/rules.d/97-ctc-lasercutter.rules"
            ],
            "sources": [
                {
                    "type": "inline",
                    "contents": "SUBSYSTEM==\"usb\", ATTRS{idVendor}==\"1a86\", ATTRS{idProduct}==\"5512\", ENV{DEVTYPE}==\"usb_device\", MODE=\"0664\", GROUP=\"lasercutter\""
                }
            ]
        }
    ]
}
